{
    "app-id": "com.github.donadigo.appeditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "appeditor-wrapper",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/girepository-1.0",
        "/share/vala",
        "/share/gir-1.0",
        "/man",
        "*.a",
        "*.la"
    ],
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc",
        "--socket=x11",
        /* Wayland */
        "--socket=wayland",
        "--filesystem=host:ro",
        "--filesystem=xdg-data/applications:create",
        /* dconf */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options": {
        "env": {
            "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
            "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
        }
    },
    "modules": [{
            "name": "libgee",
            "sources": [{
                "type": "archive",
                "url": "https://github.com/GNOME/libgee/archive/0.20.1.tar.gz",
                "sha256": "d76d0bf8ae6659dba6018fadf2ccce218ccbc107666925552008806a29702c4b"
            }]
        },
        {
            "name": "granite",
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/bin/granite-demo",
                "/share/applications/granite-demo.desktop"
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://github.com/elementary/granite/archive/5.1.0.tar.gz",
                "sha256": "4483399c62bf4cf5c26a6b708736b2b80caae8d40a0452be45548f7e8f23e0ed"
            }]
        },
        {
            "name": "wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "install -m755 appeditor-wrapper /app/bin"
            ],
            "sources": [{
                "type": "script",
                "dest-filename": "appeditor-wrapper",
                "commands": [
                    "env XDG_DATA_DIRS=$XDG_DATA_DIRS:/run/host/usr/share com.github.donadigo.appeditor"
                ]
            }]
        },
        {
            "name": "elementary-theme",
            "buildsystem": "simple",
            "build-commands": [
                "install -dm755 /app/share/themes/elementary/gtk-3.0",
                "cp -aL gtk-3.22/* /app/share/themes/elementary/gtk-3.0",
                "cp -a index.theme /app/share/themes/elementary"
            ],
            "sources": [{
                "type": "git",
                "url": "git://github.com/elementary/stylesheet.git",
                "branch": "5.1.1",
                "commit": "6a96d0f3227f15533c11e136b101ee44052eb750"
            }]
        },
        {
            "name": "appeditor",
            "buildsystem": "meson",
            "config-opts": ["--buildtype=release"],
            "sources": [{
                    "type": "archive",
                    "url": "https://github.com/donadigo/appeditor/archive/1.1.0.tar.gz",
                    "sha256": "204874da816e4175c5130171bce297685f5433686e8d9be3881a2db7e68ab54a"
                },
                {
                    "type": "patch",
                    "path": "glib-fix.patch"
                },
                {
                    "type": "patch",
                    "path": "elementary-theme.patch"
                }
            ],
            "post-install": [
                "sed -i s:Exec=data/com.github.donadigo.appeditor:Exec=/app/bin/appeditor-wrapper: /app/share/applications/com.github.donadigo.appeditor.desktop"
            ]
        }
    ]
}
