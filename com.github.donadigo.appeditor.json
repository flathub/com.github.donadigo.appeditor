{
    "app-id": "com.github.donadigo.appeditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "base":"io.elementary.BaseApp",
    "base-version": "juno-21.08",
    "sdk": "org.gnome.Sdk",
    "command": "appeditor-wrapper",
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc",
        "--socket=fallback-x11",
        /* Wayland */
        "--socket=wayland",
        "--filesystem=host:ro",
        "--filesystem=xdg-data/applications:create",
        /* dconf */
        "--metadata=X-DConf=migrate-path=/com/github/donadigo/appeditor/"
    ],
    "modules": [
        {
            "name": "glib",
            "buildsystem": "meson",
            "config-opts": [
              "-Dtests=false",
              "-Dselinux=disabled",
              "-Dinternal_pcre=false"
            ],
            "sources": [
              {
                "type": "archive",
                "url": "https://download.gnome.org/sources/glib/2.70/glib-2.70.0.tar.xz",
                "sha256": "200d7df811c5ba634afbf109f14bb40ba7fde670e89389885da14e27c0840742"
              },
              { "type": "patch", "path": "glib-appinfo.patch" }
            ]
        },
        {
            "name": "wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "install -m755 appeditor-wrapper /app/bin"
            ],
            "sources": [{
                "type": "script",
                "dest-filename": "appeditor-wrapper",
                "commands": [
                    "export XDG_DATA_DIRS=$XDG_DATA_DIRS:/run/host/usr/share:/var/lib/flatpak/exports/share:~/.local/share/flatpak/exports/share",
                    "com.github.donadigo.appeditor"
                ]
            }]
        },
        {
            "name": "appeditor",
            "buildsystem": "meson",
            "config-opts": ["--buildtype=release"],
            "sources": [{
                    "type": "archive",
                    "url": "https://github.com/donadigo/appeditor/archive/1.1.1.tar.gz",
                    "sha256": "f3c63d4fe049fe7d827ddd83cf50cc9c73a168f41985030aa6e30f8af1801b65"
                },
                {
                    "type": "patch",
                    "path": "elementary-theme.patch"
                }
            ],
            "post-install": [
                "desktop-file-edit --set-key=Exec --set-value=/app/bin/appeditor-wrapper /app/share/applications/com.github.donadigo.appeditor.desktop"
            ]
        }
    ]
}
